CREATE TABLE FAMILY (ID INTEGER GENERATED BY DEFAULT AS IDENTITY NOT NULL, DESCRIPTION VARCHAR(255), PRIMARY KEY (ID))
CREATE TABLE PERSON (ID INTEGER GENERATED BY DEFAULT AS IDENTITY NOT NULL, FIRSTNAME VARCHAR(255), LASTNAME VARCHAR(255), FAMILY_ID INTEGER, PRIMARY KEY (ID))
CREATE TABLE JOB (ID INTEGER GENERATED BY DEFAULT AS IDENTITY NOT NULL, JOBDESCRIPTION VARCHAR(255), SALARY FLOAT, PRIMARY KEY (ID))
CREATE TABLE PERSON_JOB (Person_ID INTEGER NOT NULL, jobList_ID INTEGER NOT NULL, PRIMARY KEY (Person_ID, jobList_ID))
ALTER TABLE PERSON ADD CONSTRAINT PERSON_FAMILY_ID FOREIGN KEY (FAMILY_ID) REFERENCES FAMILY (ID)
ALTER TABLE PERSON_JOB ADD CONSTRAINT PERSONJOBjobListID FOREIGN KEY (jobList_ID) REFERENCES JOB (ID)
